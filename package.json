{
  "name": "phaser-electron-game",
  "version": "0.1.4",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64 --config.win.sign=false"
  },

  "build": {
    "appId": "com.wildan.phaserelectron",
    "productName": "Phaser Electron Game",
    "files": [
      "electron/**/*",
      "game/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "WildanHanifz",
        "repo": "phaser-electron-game"
      }
    ]
  },

  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "phaser": "^3.80.0"
  }
}
